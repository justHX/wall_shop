<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderProvider" prefHeight="631.0" prefWidth="858.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wall_shop.ProviderTableController">
   <center>
      <TableView fx:id="provider" editable="true" prefHeight="414.0" prefWidth="622.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" text="ID" visible="false" />
          <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Дата" />
            <TableColumn fx:id="wallColumn" prefWidth="120.0" text="Обои" />
            <TableColumn fx:id="colorColumn" prefWidth="120.0" text="Цвет" />
            <TableColumn fx:id="providerColumn" prefWidth="100.0" text="Поставщик" />
            <TableColumn fx:id="countryColumn" prefWidth="120.0" text="Страна производитель" />
            <TableColumn fx:id="partyColumn" prefWidth="120.0" text="№ партии" />
            <TableColumn fx:id="sizeColumn" prefWidth="100.0" text="Кол-во" />
            <TableColumn fx:id="moneyColumn" prefWidth="120.0" text="Цена" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="providerButtonAdd" mnemonicParsing="false" text="Добавить запись">
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0">
                     <image>
                        <Image url="@../../build/classes/ICONS/plus.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="providerButtonSave" mnemonicParsing="false" text="Сохранить запись">
               <graphic>
                  <ImageView fitHeight="10.5" fitWidth="16.0">
                     <image>
                        <Image url="@/ICONS/mark.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="providerButtonRem" mnemonicParsing="false" text="Удалить запись">
               <graphic>
                  <ImageView fitHeight="18.5" fitWidth="18.5">
                     <image>
                        <Image url="@../../build/classes/ICONS/minus.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
